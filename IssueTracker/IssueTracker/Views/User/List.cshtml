@model List<IssueTracker.Models.ApplicationUser>
@{
    ViewBag.Title = "List";
}

<div class=container>
    <h2>User List</h2>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>User Name</th>
                <th>Full Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                if (ViewBag.Admins.Contains(user.Id))
                {
                    @:<tr class="info">
                }
                else
                {
                    @:<tr>
                }
                
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.FullName</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "User", new { @id = user.Id}, null)
                        @Html.ActionLink("Delete", "Delete", "User", new { @id = user.Id }, null)
                    </td>
               
            }
        </tbody>
    </table>
</div>

