@model List<IssueTracker.Models.Issue>

@{
    ViewBag.Title = "List";
}

<h2>Issues</h2>
<div class="container" >
    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <th>State</th>
            <th>Title</th>
            <th>Author</th>
            <th>Submitted on</th>
            <th></th>
        </tr>
        @foreach (var issue in Model)
        {
            <tr>
                <td>@issue.Id</td>
                <td>@issue.State.State</td>
                <td>@issue.Title</td>
                <td>@issue.Author.FullName</td>
                <td>@issue.SubmissionDate</td>
                <td>@Html.ActionLink("Details","Details","Issue", new { @id = @issue.Id}, new { @class = "btn-xs"})</td>
            </tr>
        }
    </table>


</div>
     
     
     
     
 

